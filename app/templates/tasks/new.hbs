<form>
    <div class="form-group">
        <label>Title</label>
        {{input type="text" value=title placeholder="Add Task.." class="form-control"}}
    </div>
    <div class="form-group">
        <label>Due Date</label>
        {{input type="date" value=date class="form-control"}}
    </div>
    <div class="form-group">
        <label>Description</label>
        {{textarea value=description placeholder="Description of the Task.." class="form-control"}}
    </div>
    <button {{action 'addTask'}} class="btn btn-primary">Submit</button> 
</form>